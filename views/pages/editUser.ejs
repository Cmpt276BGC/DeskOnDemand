<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Desks On Demand</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/mainSS.css">
    </head>
    <body>
        <div class="background">
        <h3 class="header">Edit User Info</h3>
            <form method="POST" action="/updateUserInfo">
                <% editUserInfoQueryResults.forEach(function(r) { %>
                    <ul>
                        <li><label for="email" style="width: 150px;">Email: </label><input type="email" style="background-color: transparent; border: transparent;" id="uemail" name="uemail" value="<%= r.uemail %>" readonly></li>
                        <li><label for="fname" style="width: 150px;">First Name: </label><input type="text" id="fname" name="fname" value="<%= r.fname %>" required></li>
                        <li><label for="lname" style="width: 150px;">Last Name: </label><input type="text" id="lname" name="lname" value="<%= r.lname %>" required></li>
                        <li><label for="password" style="width: 150px;">Change Password: </label><input type="password" id="password" name="password" minlength="8" maxlength="64"></li>
                        <li>
                            <label for="admin" style="width: 150px;">Change Admin: </label>
                            <select name="admin" id="admin">
                                <option value=""></option>
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                        </li><br>
                        <li><input type="submit" value="Update User Info"></li>
                    </ul>
                    
                <% }); %><br>
                
            </form>        
        <form method="GET" action="/db">
            <input type="submit" value="Return">
        </form>

        <form method="GET" action="/users/admindash">
            <input type="submit" value="Return to admin dash">
        </form>
        
        <form method="GET" action="/users/logout">
            <input type="submit" value="Log Out">
        </form>
        
        <script type="text/javascript" src="/public/adminbutton.js">
        </script>
        </div>
    </body>
</html>