<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Manage Users</title>
    <link rel="stylesheet" href="/public/stylesheets/mainSS.css">
  </head> 
  <body>
    <div class="background">
      <br>
      <h1 class="header">Manage Users</h1>
      <ul class="errors">
        <% if(typeof errors != 'undefined') { %>
          <% errors.forEach(error => { %>
            <li><%= error.message %></li>
          <% }) %>
        <% } %>
      </ul>
      <form action="/users/addUser" method="POST">
        <div>
          <input type="text" class="inputbox" id="fname" name="fname" placeholder="First Name" required /> 
        </div>
        <br>
        <div>
          <input type="text" class="inputbox" id="lname" name="lname" placeholder="Last Name" required /> 
        </div>
        <br>
        <div>
            <input type="email" class="inputbox" id="email" name="email" placeholder="Email" required /> 
        </div>
        <br>
        <div>
            <input type="password" class="inputbox" id="password" name="password" placeholder="Password" required /> 
        </div>
        <br>
        <div>
            <input type="password" class="inputbox" id="confirmpw" name="confirmpw" placeholder="Confirm Password" required /> 
        </div>
        <br>
        <div>
            <input type="submit" class="button" value="Add User" />
            <input type="submit" class="button" value="Add Admin" onclick="javascript: form.action='/addAdmin'"/>
            <input type="submit" class="button" value="Delete User" />
            <input type="submit" class="button" value="Edit User Information" />
            <input type="submit" class="button" onclick="location.href='/db';" value="Display All Users" />
        </div>
        <br>
        <br>
        <br>
      </form>
    </div>
  </body>
</html>
